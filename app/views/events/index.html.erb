<% content_for(:title, "Events around Kota Kinabalu - ApaCerita") %>

<div class="span12">
  <% if !@events.blank? %>
    <%= render @events %>
    <%= paginate @events, :theme => 'twitter-bootstrap' %>
  <% elsif @events.blank? and params[:q] %>
    <div class="blank-state">
      <h2>Ooops... Can't find any events</h2>
      <p>Try a different keyword or date</p>
    </div>
  <% else %>
    <div class="blank-state">
      <h2>Hmmm... Odd... No Events...</h2>
      <p>If you know about an upcoming event, <%= link_to "add it here!", new_event_path %></p>
    </div>
  <% end -%>
</div>